{
    "watch": ["src"],      
    "ext": "ts, .js",                     
    "exec": "ts-node -r ./src/index.ts",  
    "ignore": ["src/**/*.test.ts", "node_modules"], 
    "env": {
      "TS_NODE_FILES": "true",           
      "NODE_ENV": "development"          
    },
    "signal": "SIGTERM",                  
    "legacyWatch": true                    
  }
  